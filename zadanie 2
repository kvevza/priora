using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace OOP
{
    internal class Phone
    {
        private string brand;
        private int batteryLevel;

        public string Brand
        {
            get { return brand; }
            set { brand = value; }
        }
        public int BatteryLevel
        {
            get { return batteryLevel; }
            set
            {
                if(value >= 0 && value <= 100)
                {
                    batteryLevel = value;
                }
                else
                {
                    Console.WriteLine("Заряд должен быть от 0 до 100!");
                }
            }
        }
        public Phone(string brand, int batteryLevel)
        {
            Brand = brand;
            BatteryLevel = batteryLevel;
        }
        public void usePhone()
        {
            if (batteryLevel > 0)
            {
                batteryLevel = (batteryLevel - 10);
            }
            Console.WriteLine($"Бренд: {brand}, Заряд батареи: {batteryLevel}%");
        }
}  }
 internal class Program
 {
     static void Main(string[] args)
     {
         Phone phone1 = new Phone("IPhone",90);
         phone1.usePhone();
         phone1.usePhone();

         Phone phone2 = new Phone("IPhone", -10);
         phone2.usePhone();

     } 
 }
